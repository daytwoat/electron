{
    "name": "electron",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist-app/main.js",
    "scripts": {
        "dev": "npm-run-all --parallel dev:react dev:electron",
        "dev:ui": "vite",
        "dev:app": "electron .",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "transpile:app": "tsc --project src/electron/tsconfig.json",
        "dist:mac": "npm run transpile:app && npm run build && electron-builder --mac --arm64",
        "dist:win": "npm run transpile:app && npm run build && electron-builder --win --x64",
        "dist:linux": "npm run transpile:app && npm run build && electron-builder --linux --x64",
        "test:e2e": "playwright test",
        "test:unit": "vitest src"
    },
    "dependencies": {
        "@mantine/carousel": "^7.14.1",
        "@mantine/charts": "^7.14.1",
        "@mantine/code-highlight": "^7.14.1",
        "@mantine/core": "^7.14.1",
        "@mantine/dates": "^7.14.1",
        "@mantine/dropzone": "^7.14.1",
        "@mantine/form": "^7.14.1",
        "@mantine/hooks": "^7.14.1",
        "@mantine/modals": "^7.14.1",
        "@mantine/notifications": "^7.14.1",
        "@mantine/nprogress": "^7.14.1",
        "@mantine/spotlight": "^7.14.1",
        "@mantine/tiptap": "^7.14.1",
        "@tiptap/extension-link": "^2.10.2",
        "@tiptap/pm": "^2.10.2",
        "@tiptap/react": "^2.10.2",
        "@tiptap/starter-kit": "^2.10.2",
        "dayjs": "^1.11.13",
        "embla-carousel-react": "^7.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "recharts": "^2.13.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/verror": "^1.10.10",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.13.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "postcss": "^8.4.49",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-simple-vars": "^7.0.1",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10"
    }
}
